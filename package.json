{
	"name": "trigonofy",
	"version": "0.0.4",
	"author": "Radhi Fadlillah",
	"license": "MIT",
	"description": "Library to generate colorful triangular background image",
	"main": "trigonofy.min.js",
	"type": "module",
	"types": "definitions/index.d.ts",
	"keywords": [
		"lowpoly",
		"triangle",
		"art"
	],
	"devDependencies": {
		"@types/chroma-js": "^2.1.3",
		"@types/d3-delaunay": "^6.0.0",
		"@types/node": "^16.10.1",
		"esbuild": "^0.13.2",
		"typescript": "^4.4.3"
	},
	"dependencies": {
		"chroma-js": "^2.1.2",
		"d3-delaunay": "^6.0.2"
	},
	"scripts": {
		"ts": "npx tsc ./src/index.ts --declaration --emitDeclarationOnly --esModuleInterop --downlevelIteration --allowSyntheticDefaultImports --outdir ./definitions",
		"prod": "node build.esbuild.mjs && npm run ts",
		"dev": "node build.esbuild.mjs dev",
		"serve": "node build.esbuild.mjs serve"
	}
}
